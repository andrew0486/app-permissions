<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/app_permission?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping class="com.permission.model.JobPermission"/>
    <mapping class="com.permission.model.ParameterConfiguratiions"/>
    <mapping class="com.permission.model.Roles"/>
    <mapping class="com.permission.model.RollPermission"/>
    <mapping class="com.permission.model.UserSession"/>
    <mapping class="com.permission.model.User"/>
  </session-factory>
</hibernate-configuration>
